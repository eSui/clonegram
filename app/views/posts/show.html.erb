<div class="posts-wrapper">
  <div class="post">
    <div class="post-head">
      <div class="name">
        Eric Sui
      </div>
    </div>
    <div class="image center-block">
      <%= image_tag @post.image.url(:medium) %>
    </div>
    <p class="caption">
      <%= @post.caption %>
    </p>
    <div class="text-center edit-links">
      <%= link_to "Edit", edit_post_path(@post) %>
      |
      <%= link_to "Cancel", post_path %>
    </div>
  </div>
</div>
