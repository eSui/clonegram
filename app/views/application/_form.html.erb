<div class="form-wrapper">
  <%= simple_form_for @post, html: {class: 'form-horizontal', multipart: true} do |f| %>
  <div class="form-group imageInput">
    <%= f.input :image%>
  </div>
  <br>
  <div class="form-group">
    <%= f.input :caption%>
  </div>
  <div class="form-group text-center">
    <%= f.button :submit, class: "btn btn-default"%>
  </div>

  <div class="text-center edit-links">
    <%= link_to "Delete Post", posts_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
    |
    <%= link_to "Cancel", posts_path %>
  </div>
  <%end%>
</div>
